[colors]
background = #ed10181a
background-alt = #000a050f
foreground = ${xrdb:foreground}
foreground-alt = ${xrdb:foreground}
primary = ${xrdb:color4}
secondary = ${xrdb:color5}
alert = ${xrdb:color1}

[bar/top]
monitor = "eDP-1"
dpi = 133
include-file = ~/.config/polybar/top-bar
modules-left = hostname tor ip mpd volume uptime
modules-center = date menu-apps
modules-right = mail reloadDns dnsDaemon wlan eth memory battery lock

[bar/bottom]

[module/lock]
type = custom/text
content =  
content-foreground = ${colors.alert}
content-background = ${colors.background}
content-padding = 2
click-left = i3lock -i ~/images/bgi3lock.png -e

[module/uptime]
type = custom/script
exec = uptime|awk '{print $2 " " $3 " " $4 " " $5 " " $6}'|cut -d ',' -f -2
interval = 5
format-prefix="   "
format-prefix-foreground = ${colors.primary}
format-foreground = ${colors.foreground}
format-padding = 2
format-background = ${colors.background}

[module/torDaemon]
type = custom/script
exec = ~/.config/polybar/status tor
interval = 4
format = <label>
format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-prefix= " "
format-padding = 1
format-prefix-foreground = ${colors.alert}

[module/reloadDns]
type = custom/text
content =  
content-foreground = ${colors.alert}
content-padding = 1
content-background = ${colors.background}
; need into /etc/sudoers line bellow to work
; username ALL=(ALL) NOPASSWD: /bin/sh /home/izsha/bin/fix_dnscrypt.sh
click-left = "sudo sh ~/bin/fix_dnscrypt.sh"

[module/dnsDaemon]
type = custom/script
exec = ~/.config/polybar/status dnscrypt-proxy
interval = 4
format = <label>
format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-padding = 1

[module/menu-apps]
type = custom/menu
expand-right = true
menu-0-0 = Browser
menu-0-0-exec = menu-open-1
menu-0-1 = Pentest
menu-0-1-exec = menu-open-2
menu-0-2 = Multimedia 
menu-0-2-exec = menu-open-3

; browser side
menu-1-0 = Vivaldi
menu-1-0-exec = vivaldi_sec &
menu-1-1 = Xombrero
menu-1-1-exec = xombrero &
menu-1-2 = w3m
menu-1-2-exec = termite -e "w3m https://duckduckgo.com" &

; pentest side
menu-2-0 = Term
menu-2-0-exec = termite &
menu-2-1 = Wireshark
menu-2-1-exec = wireshark-gtk &
menu-2-2 = Msf
menu-2-2-exec = termite -e msfconfsole &

; multimedia side
menu-3-0 = Wallpapers
menu-3-0-exec = feh -B black -D 2.0 ~/images &
menu-3-1 = Gimp
menu-3-1-exec = gimp &
menu-3-2 = Scrot
menu-3-2-exec = scrot &

format-background = ${colors.background}
format-padding = 2
label-open = "%{F#fa1B54} %{F-}"
label-close = "%{F#4b62f1} %{F-}"
label-separator = " | "

[module/bspwm]
[module/i3]

[module/ip]
type = custom/script
interval = 2
format = "<label> "
format-prefix = "ip: "
format-prefix-foreground = ${colors.primary}
format-background = ${colors.background}
format-padding = 1
exec = echo "$(curl --limit-rate 1k -s https://ifcfg.me)"
exec-if = ping -c 1 gentoo.org

[module/hostname]
type = custom/script
interval = 256
format = "<label> "
format-prefix = "  "
format-prefix-foreground = ${colors.primary}
format-padding = 0
format-background = ${colors.background}
exec = echo "$(uname -n)"

[module/mail]
type = custom/script
; 600s = 10min
interval = 600
format = " <label> "
format-prefix = " "
format-padding = 2
format-background = ${colors.background}
format-prefix-foreground = ${colors.primary}
exec = ~/.config/polybar/mails

[module/tor]
type = custom/text
content = " "
content-foreground = ${colors.secondary}
content-padding = 2
content-background = ${colors.background}
; need into /etc/sudoers line bellow to work
; username ALL=(ALL) NOPASSWD: /bin/systemctl restart tor
click-left = "sudo systemctl restart tor"

[module/mpd]
type = internal/mpd
host = 127.0.0.1
port = 53000
format-online = <icon-prev> <icon-pause> <icon-play> <icon-next>
format-online-background = ${colors.background}

icon-prev = " "
icon-play = 
icon-pause = 
icon-next = " "
label-song = %{F#7a1B54}   %{F-} %{F#215d76}%artist:0:10% %{F-} %{F#B8eadb}*%{F-} %{F#602976} %title:0:10% %{F-}

toggle-on-foreground = ${colors.primary}
toggle-off-foreground = ${colors.secondary}

label-offline = no sound

[module/memory]
type = internal/memory
interval = 2
format-prefix = "mem: "
format-prefix-foreground = ${colors.secondary}
format-background = ${colors.background}
format-padding = 2
format-underline = #4bffdc
label = %percentage_used%%

[module/wlan]
type = internal/network
interface = wlp2s0
interval = 3.0
format-connected = <label-connected>
format-connected-background = ${colors.background}
format-connected-padding = 2
format-connected-underline = #9f78e1
label-connected = "%{F#a03377}wlan:%{F-} %essid% - %{F#aca074}%signal%% %{F-}"

format-disconnected = "wlan offline"
format-disconnected-background = ${colors.background}
format-disconnected-padding = 2
label-disconnected-foreground = ${colors.foreground-alt}

[module/eth]
type = internal/network
interface = enp1s0f2
interval = 3.0

format-connected-underline = #55aa55
format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %local_ip%

format-disconnected = 

[module/date]
type = internal/date
interval = 5
date = " %a %d %b  "
date-alt = " %d-%m"
time = "  %H:%M,"
time-alt = %H:%M
format-underline = #0a6cf5
format-foreground = ${colors.foreground-alt}
format-padding = 1
format-background = ${colors.background}
label = %time% %date%

[module/volume]
type = custom/script
interval = 2
format = "<label> "
format-prefix = "vol: "
format-padding = 2
format-background = ${colors.background}
format-prefix-foreground = ${colors.primary}
exec = echo "$(mpc volume | awk '{print $2}')"

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 99

format-charging = <animation-charging> <label-charging>
format-charging-underline = #ffb52a
format-charging-background = ${colors.background}
format-charging-padding = 2

format-discharging = <ramp-capacity> <label-discharging>
format-discharging-underline = ${self.format-charging-underline}

format-full-prefix =  
format-full-prefix-foreground = ${colors.primary}
format-full-underline = ${self.format-charging-underline}
format-full-background = ${colors.background}
format-full-padding = 2

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-foreground = ${colors.foreground-alt}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-foreground = ${colors.foreground-alt}
animation-charging-framerate = 750

[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0
