# Erase default options

COLOUR_BG="#0c211a"

set-option -g status-position bottom
setw -g window-status-format "#[fg=colour5,noreverse]#[fg=colour15,bg=colour5,noreverse] #I #W  #[fg=default,noreverse]"
setw -g window-status-current-format "#[fg=colour6]#[fg=colour15,bg=colour6] #I #[bg=colour6] #W  #[fg=default,noreverse]"
set -g status-left ''
set -g status-right ''
set -g status-justify right
set-option -g pane-active-border-bg default
set-option -g pane-active-border-fg colour0
set -g status-bg default
